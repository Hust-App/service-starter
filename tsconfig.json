{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./build",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
